@model IEnumerable<Ecommerce_Modelos.Producto>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Productos</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Producto" asp-action="Upsert" class="btn btn-primary">Nuevo Producto</a>
        </div>
    </div>
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped style=width:100%">
            <thead>
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Descripcion
                    </th>
                    <th>
                        Categoria
                    </th>
                    <th>
                        Tipo Aplicacion
                    </th>
                    <th>
                        Precio
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.NombreProducto</th>
                        <th>@item.DescripcionCorta</th>
                        <th>@item.Categoria.NombreCategoria</th>
                        <th>@item.TipoAplicacion.Nombre</th>
                        <th>@item.Precio</th>
                        <th class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Producto" asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                    Editar
                                </a>
                                <a asp-controller="Producto" asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                    Eliminar
                                </a>
                            </div>

                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No hay Productos</p>
    }
</div>