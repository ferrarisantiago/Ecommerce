@model IEnumerable<Ecommerce_Modelos.Categoria>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Lista de Categorias</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Categoria" asp-action="Crear" class="btn btn-primary">Nueva categoria</a>
        </div>
    </div>
    <br/>
    @if (Model.Count()>0)
    {
        <table class="table table-bordered table-striped style=width:100%">
            <thead>
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Orden
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="50%">@item.NombreCategoria</th>
                        <th width="30%">@item.MostrarOrden</th>
                        <th class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Categoria" asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                    Editar
                                </a>
                                <a asp-controller="Categoria" asp-action="Eliminar" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                    Eliminar
                                </a>
                            </div>

                        </th>
                    </tr>
                }
            </tbody>
        </table>
    }
    else{
        <p>No hay categorias</p>
    }
</div>

